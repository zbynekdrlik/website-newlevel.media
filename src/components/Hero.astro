<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black">
  <!-- Gradient orbs with parallax (hidden on mobile for performance) -->
  <div
    class="mobile-hide-blur absolute top-20 right-[10%] w-72 h-72 md:w-[500px] md:h-[500px] bg-red-600/8 rounded-full blur-[100px]"
    style="transform: translateY(calc(var(--scroll, 0) * 0.12px));"
  ></div>
  <div
    class="mobile-hide-blur absolute bottom-32 left-[5%] w-56 h-56 md:w-80 md:h-80 bg-red-500/5 rounded-full blur-[80px]"
    style="transform: translateY(calc(var(--scroll, 0) * -0.08px));"
  ></div>
  <div
    class="mobile-hide-blur absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-red-900/5 rounded-full blur-[120px]"
  ></div>

  <!-- Grid pattern overlay (hidden on mobile for performance) -->
  <div
    class="mobile-hide-blur absolute inset-0 opacity-[0.04]"
    style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.5) 1px, transparent 0); background-size: 48px 48px;"
  ></div>

  <!-- Horizontal accent lines -->
  <div class="absolute top-1/4 left-0 right-0 h-px bg-gradient-to-r from-transparent via-red-500/10 to-transparent"></div>
  <div class="absolute top-3/4 left-0 right-0 h-px bg-gradient-to-r from-transparent via-white/5 to-transparent"></div>

  <!-- Content -->
  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center pt-24 pb-32">
    <div class="mb-8">
      <span
        class="inline-block px-4 py-1.5 text-xs font-semibold tracking-[0.2em] text-red-400 uppercase bg-red-500/10 rounded-full border border-red-500/20"
      >
        Technology &middot; Media &middot; Innovation
      </span>
    </div>

    <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black text-white mb-6 tracking-tight leading-[0.95]">
      We Build<br />
      <span class="text-gradient-red">the Future</span>
    </h1>

    <p class="text-lg sm:text-xl md:text-2xl text-white/50 max-w-2xl mx-auto mb-12 leading-relaxed font-light">
      From live events to intelligent automation &mdash; we deliver technology solutions that transform how you work.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="#services"
        class="inline-flex items-center justify-center px-8 py-4 bg-[var(--color-primary)] text-white font-semibold rounded-full transition-all duration-300 shadow-lg shadow-red-500/25 hover:shadow-red-500/40 hover:-translate-y-0.5 text-base pulse-red"
      >
        Explore Our Services
        <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
      <a
        href="#contact"
        class="inline-flex items-center justify-center px-8 py-4 bg-white/5 text-white font-semibold rounded-full transition-all duration-300 hover:bg-white/10 border border-white/10 hover:border-white/20 text-base"
      >
        Get in Touch
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="flex flex-col items-center gap-2">
      <span class="text-[10px] font-medium tracking-widest uppercase text-white/20">Scroll</span>
      <svg class="w-5 h-5 text-white/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>

  <!-- Bottom fade to next section -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-[var(--color-background-alt)] to-transparent"></div>
</section>
